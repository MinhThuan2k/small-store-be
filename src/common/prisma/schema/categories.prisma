model Category {
  id          BigInt        @id @default(autoincrement())
  name        String
  description String?

  created_at   DateTime      @default(now()) @map("created_at")
  updated_at   DateTime?     @updatedAt @map("updated_at")
  created_by   BigInt       
  updated_by   BigInt       
  deleted     Int           @default(0)
  deleted_at   DateTime?    

  createdBy User?         @relation("CategoryCreatedBy", fields: [created_by], references: [id])
  updatedBy User?         @relation("CategoryUpdatedBy", fields: [updated_by], references: [id])

  subCategories SubCategory[]       @relation("ParentCategory")
  products Product[]       @relation("CategoryProduct")

  @@map("categories")
}
