model Product {
  product_id  BigInt       @id @default(autoincrement())
  sku         String
  name        String
  description String?
  summary     String?
  cover       String?
  status      String?        @default("AC")
  category_id  BigInt?       
  created_at   DateTime      @default(now())
  updated_at   DateTime?     @updatedAt
  created_by  BigInt       
  updated_by  BigInt       
  deleted     Int           @default(0)
  deleted_at   DateTime?    

  createdBy User?         @relation("ProductCreatedBy", fields: [created_by], references: [id])
  updatedBy User?         @relation("ProductUpdatedBy", fields: [updated_by], references: [id])

  category    Category? @relation("CategoryProduct", fields: [category_id], references: [id])
  
  attributes    ProductAttributeValue[]
  @@map("products")
}
