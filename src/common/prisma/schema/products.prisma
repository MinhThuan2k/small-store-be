model Product {
  product_id  BigInt       @id @default(autoincrement())
  sku         String
  name        String
  description String?
  summary     String?
  cover       String?
  status      String?       @default("AC")
  categoryId  BigInt?       @map("category_id")
  createdAt   DateTime      @default(now()) @map("created_at")
  updatedAt   DateTime?     @updatedAt @map("updated_at")
  created_by  BigInt       
  updated_by  BigInt       
  deleted     Int           @default(0)
  deletedAt   DateTime?     @map("deleted_at")

  createdBy User?         @relation("ProductCreatedBy", fields: [created_by], references: [id])
  updatedBy User?         @relation("ProductUpdatedBy", fields: [updated_by], references: [id])

  category    Category? @relation("CategoryProduct", fields: [categoryId], references: [id])
  
  attributes    ProductAttributeValue[]
  @@map("products")
}
